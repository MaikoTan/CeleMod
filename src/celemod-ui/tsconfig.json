{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "target": "ES2022",
    "typeRoots": [
      "./src/types"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "baseUrl": "./",
  "paths": {
    "react": [
      "./node_modules/preact/compat/"
    ],
    "react-dom": [
      "./node_modules/preact/compat/"
    ]
  }
}